# Private key for deploying contracts (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Arbitrum Sepolia RPC URL (optional, defaults to public RPC)
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# 用户合约验证的浏览器密钥，使用 etherscan.io 的就可以
# 具体地址: https://etherscan.io/apidashboard
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Sepolia RPC URL and Private Key (for other networks)
SEPOLIA_RPC_URL=your_sepolia_rpc_url
SEPOLIA_PRIVATE_KEY=your_sepolia_private_key

# Bridge2 Contract Constructor Parameters
# Hot validator addresses (comma-separated)
HOT_VALIDATOR_ADDRESSES=0x0000000000000000000000000000000000000001,0x0000000000000000000000000000000000000002

# Cold validator addresses (comma-separated)
COLD_VALIDATOR_ADDRESSES=0x0000000000000000000000000000000000000003,0x0000000000000000000000000000000000000004

# Validator powers (comma-separated)
VALIDATOR_POWERS=100,100

# USDC Token Address on Arbitrum Sepolia
# Official USDC Sepolia testnet address
USDC_ADDRESS=0x75faf114eafb1BDbe2F0316DF893fd58CE46AA4d

# Dispute period in seconds
DISPUTE_PERIOD_SECONDS=86400

# Block duration in milliseconds
BLOCK_DURATION_MILLIS=250

# Locker threshold
LOCKER_THRESHOLD=2

